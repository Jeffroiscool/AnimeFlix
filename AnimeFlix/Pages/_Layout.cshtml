<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - AnimeFlix</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" media="screen">
</head>
<body>
<div class="navbar navbar-expand navbar-dark bg-primary">
    <div class="container">
        <a href="~/" class="navbar-brand">AnimeFlix</a>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Anime">Anime</a>
                </li>
            </ul>
            @await Html.PartialAsync("_LoginPartial")
        </div>
    </div>
</div>

<div class="container">
    <br/>
    <ol class="breadcrumb">
        @for (var i = 0; i < ((Dictionary<string, string>)ViewData["Breadcrumbs"]).Count ; i++)
        {
            <li class="breadcrumb-item @(((Dictionary<string, string>) ViewData["Breadcrumbs"]).Count - 1 == i ? "active" : "")">
                <a @(((Dictionary<string, string>) ViewData["Breadcrumbs"]).ToList()[i].Value == "" ? "" : $"href={((Dictionary<string, string>) ViewData["Breadcrumbs"]).ToList()[i].Value}")>@(((Dictionary<string, string>) ViewData["Breadcrumbs"]).ToList()[i].Key)</a>
            </li>
        }
    </ol>
    @*<div class="page-header" id="banner">
        <div class="row">
            <div class="col-lg-8 col-md-7 col-sm-6">
                <h1>@ViewData["Header"]</h1>
            </div>
        </div>
    </div>*@
    @RenderBody()
    <hr/>
    <footer id="footer">
        <p>&copy; 2017 - AnimeFlix</p>
    </footer>
</div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>

    @RenderSection("Scripts", false)
</body>
</html>